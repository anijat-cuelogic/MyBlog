<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= resource.errors.full_messages.to_sentence if resource.errors.present? %><br />
  <%= f.text_field :name, :placeholder => "Name"%><br /><br />
  <%= f.email_field :email, :autofocus => true ,  :placeholder => "email"%><br /><br />
  <%= f.password_field :password , :placeholder => "password" %><br /><br />
  <%= f.password_field :password_confirmation, :placeholder => "password_confirmation"%><br /></br>
  <%= f.submit "Sign up",:value => "SIGN UP" %>
<% end %>

<%= render 'devise/shared/links'%>