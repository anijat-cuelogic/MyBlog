<h1>New post</h1>

<%= form_for(@post) do |f| %>
  <% if @errors.present? %>
    <li><%= @errors %></li>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
