<h1>New post</h1>

<%= form_for(@post) do |f| %>
  <% if @errors.present? %>
    <div><%= @errors %></div>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    <%= f.hidden_field :author_id, value: current_user.id%>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
